<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SelectForget"
    android:background="@drawable/back123"
    android:padding="20dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="make selection"
            android:textSize="40dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/bangers"
            android:layout_marginTop="30dp"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="selectwhich contact detail should we use to reset your password"
             android:textSize="18dp"
             android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_smartphone_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                app:tint="@color/colorAccent"
                />

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via sms"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_marginTop="35dp"
                />
            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+21652645566"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/mobile_icon"
                android:layout_toRightOf="@id/mobile_icon"
                />

            <Button
                android:onClick="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>
        <RelativeLayout
            android:onClick="login"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_email_24"
                app:tint="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/mail_icon"
                android:text="vai mail"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_icon"
                android:layout_toRightOf="@id/mail_icon"
                android:text="support@gmail.com"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:onClick="email"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>